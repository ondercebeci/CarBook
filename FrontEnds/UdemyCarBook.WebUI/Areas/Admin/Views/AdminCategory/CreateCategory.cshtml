@model CreateCategoryDto
@{
	ViewData["Title"] = "CreateCategory";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="card">
			<div class="card-body">

				<h4 class="card-title">Yeni Blog Kategori Girişi</h4>
				<p class="card-subtitle mb-4">
					Yeni Kategori Girişini Aşağıda Yapabilirsiniz.
				</p>
				<form method="post">
					<div class="form-group">
						<label for="exampleInputName">Kategori Adı</label>
						<input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Kategori Adını Giriniz">
					</div>
					<br /><br />
					<button type="submit" class="btn btn-primary waves-effect waves-light">Kategoriyi Kaydet</button>
				</form>

			</div>
		</div>
	</div>
</div>




