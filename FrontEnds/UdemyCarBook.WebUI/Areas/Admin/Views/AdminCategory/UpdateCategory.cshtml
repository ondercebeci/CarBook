@model UpdateCategoryDto
@{
	ViewData["Title"] = "UpdateCategory";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="card">
			<div class="card-body">

				<h4 class="card-title"> Kategori Güncelleme Sayfası</h4>
				<p class="card-subtitle mb-4">
					 Kategori Bilgisini Güncellemeyi Aşağıdan Yapabilirsiniz.
				</p>
				<form method="post">
					<input type="hidden" asp-for="CategoryID" />
					<div class="form-group">
						<label for="exampleInputName">Kategori Adı</label>
						<input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Kategori Adını Giriniz">
					</div>
					<br /><br />
					<button type="submit" class="btn btn-primary waves-effect waves-light">Kategoriyi Güncelle</button>
				</form>

			</div>
		</div>
	</div>
</div>




