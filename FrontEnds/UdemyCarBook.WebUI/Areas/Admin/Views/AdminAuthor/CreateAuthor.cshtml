@model CreateAuthorDto
@{
    ViewData["Title"] = "CreateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="card">
			<div class="card-body">

				<h4 class="card-title">Yeni Yazar Bilgisi Girişi</h4>
				<p class="card-subtitle mb-4">
					Yeni Yazar Girişini Aşağıda Yapabilirsiniz. 
				</p>
				<form method="post">
					<div class="form-group">
						<label for="exampleInputName">Ad Soyad</label>
						<input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Ad Soyad Giriniz">
					</div>
					<div class="form-group">
						<label for="exampleInputDescription">Açıklama</label>
						<textarea rows="5" class="form-control" asp-for="Description" id="exampleInputDescription" placeholder="Açıklamayı Giriniz"></textarea>
						
					</div>
					<div class="form-group">
						<label for="exampleInputImageUrl">Yazar Görsel</label>
						<input type="text" class="form-control" asp-for="ImageUrl" id="exampleInputImageUrl" placeholder="Video Url Giriniz">
					</div>
					<br /><br />
					<button type="submit" class="btn btn-primary waves-effect waves-light">Yazar Bilgisini Kaydet</button>
				</form>

			</div>
		</div>
	</div>
</div>




