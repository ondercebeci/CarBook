@model UpdatePricingDto
@{
    ViewData["Title"] = "UpdatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
	<div class="container-fluid">
		<div class="card">
			<div class="card-body">

				<h4 class="card-title">Y Ödeme Periyodu Güncelleme Sayfası</h4>
				<p class="card-subtitle mb-4">
					Ödeme Periyodu Alanını Aşağıda Güncelleyebilirsiniz. 
				</p>
				<form method="post">
					<div class="form-group">
						<input type="hidden" asp-for="PricingID" />
						<label for="exampleInputName">Ödeme Periyot Başlığı</label>
						<input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Ödeme Periyot Adını Giriniz">
					</div>

					<button type="submit" class="btn btn-primary waves-effect waves-light">Ödeme Periyot Bilgisini Kaydet</button>
				</form>

			</div>
		</div>
	</div>
</div>




