@model UpdateLocationDto
@{
	ViewData["Title"] = "UpdateLocation";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="card">
			<div class="card-body">

				<h4 class="card-title"> Lokasyon Bilgisi Güncelleme Alanı</h4>
				<p class="card-subtitle mb-4">
					Aaçların alındığı ve teslim edildiği noktalara ait lokasyon bilgisinin güncellendiği sayfadır. Bilgileri eksiksiz olarak doldurunuz.
				</p>
				<form method="post">
					<input type="hidden" asp-for="LocationID" />
					<div class="form-group">
						<label for="exampleInputName">Lokasyon Adı</label>
						<input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Lokasyon Adını Giriniz">
					</div>
					<button type="submit" class="btn btn-primary waves-effect waves-light">Lokasyon Adını Güncelle</button>
				</form>

			</div>
		</div>
	</div>
</div>


