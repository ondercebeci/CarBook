@model UpdateFooterAddressDto
@{
    ViewData["Title"] = "UpdateFooterAdress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
	<div class="container-fluid">
		<div class="card">
			<div class="card-body">

				<h4 class="card-title">Yeni Adres Bilgisi Güncelle</h4>
				<p class="card-subtitle mb-4">
					 Adres Bilgisi Güncellemelerini Aşağıda Yapabilirsiniz.
				</p>
				<form method="post">
					<input type="hidden" asp-for="FooterAddressID" />
					<div class="form-group">
						<label for="exampleInputAdress">Adres</label>
						<input type="text" class="form-control" asp-for="Address" id="exampleInputAdress" placeholder="Adres Bilgisini Giriniz">
					</div>
					<div class="form-group">
						<label for="exampleInputDescription">Açıklama</label>
						<textarea rows="3" class="form-control" asp-for="Description" id="exampleInputDescription" placeholder="Açıklamayı Giriniz"></textarea>

					</div>
					<div class="form-group">
						<label for="exampleInputPhone">Telefon</label>
						<input type="tel" class="form-control" asp-for="Phone" id="exampleInputPhone" placeholder="Telefon Bilgisini Giriniz">
					</div>
					<div class="form-group">
						<label for="exampleInputEmail">Email Adresi</label>
						<input type="text" class="form-control" asp-for="Email" id="exampleInputEmail" placeholder="Mail Adresini Giriniz">
					</div>
					<br /><br />
					<button type="submit" class="btn btn-primary waves-effect waves-light">Adres Bilgisini Güncelle</button>
				</form>

			</div>
		</div>
	</div>
</div>






