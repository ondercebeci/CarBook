@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
	<div class="container-fluid">
		<div class="card">
			<div class="card-body">

				<h4 class="card-title">Yeni Marka Güncelleme Sayfası</h4>
				<p class="card-subtitle mb-4">
					Marka ile ilgili bilgileri aşağıdaki kutucuktan güncelleyebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.
				</p>
				<form method="post">
					<div class="form-group">
						<input type="hidden" asp-for="BrandID" />
						<label for="exampleInputName">Marka Adı</label>
						<input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Marka Adı Giriniz">
					</div>
					<button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Güncelle</button>
				</form>

			</div>
		</div>
	</div>
</div>

