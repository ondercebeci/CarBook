@model UpdateCarDto
@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="card">
			<div class="card-body">

				<h4 class="card-title"> Araç Güncelleme Sayfası</h4>
				<p class="card-subtitle mb-4">Araç ile ilgili bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak Güncelleme işlemi tamamlayabilirsiniz.</p>

				<form method="post">
					<input type="hidden" asp-for="CarID" />
					<div class="form-group">
						<label for="exampleInputBrand">Marka</label>
						@*  @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.brandvalues,new {@class="form-control" }) *@
						<select asp-for="BrandID" asp-items="@ViewBag.brandValues" class="form-control">
							<option value="">--Seçiniz--</option>
						</select>

					</div>
					<div class="form-group">
						<label for="exampleInputCoverImage">Model</label>
						<input type="text" class="form-control" asp-for="Model" id="exampleInputPassword1" placeholder="Kapak Fotoğraf linkini giriniz">
					</div>
					<div class="form-group">
						<label for="exampleInputCoverImageUrl">Kapak Fotoğrafı</label>
						<input type="text" class="form-control" asp-for="CoverImageUrl" id="exampleInputCoverImageUrl" placeholder="Kapak Fotoğrafı Url Giriniz">
					</div>
					<div class="form-group">
						<label for="exampleInputKm">Km</label>
						<input type="text" class="form-control" asp-for="Km" id="exampleInputPassword1" placeholder="Km Girişi Yapınız">
					</div>

					<div class="form-group">
						<label for="exampleInputTransmission">Vites Türü</label>
						<input type="text" class="form-control" asp-for="Transmission" id="exampleInputPassword1" placeholder="Vites Türü Girişi Yapınız">
					</div>
					<div class="form-group">
						<label for="exampleInputSeat">Koluk Sayısı</label>
						<input type="number" class="form-control" asp-for="Seat" id="exampleInputSeat" placeholder="Koltuk Sayısı Girişi Yapınız">
					</div>
					<div class="form-group">
						<label for="exampleInputLaggage">Bagaj Sayısı</label>
						<input type="number" class="form-control" asp-for="Laggage" id="exampleInputLaggage" placeholder="Bagaj Sayısını Girişi Yapınız">
					</div>
					<div class="form-group">
						<label for="exampleInputFuel">Yakıt Türü</label>
						<input type="text" class="form-control" asp-for="Fuel" id="exampleInputFuel" placeholder="Yakıt Türü Girişi Yapınız">
					</div>
					<div class="form-group">
						<label for="exampleInputBigImageUrl">Büyük Kapak Fotoğrafı Url Giriniz</label>
						<input type="text" class="form-control" asp-for="BigImageUrl" id="exampleInputBigImageUrl" placeholder="Araç Detayında Görünecek Kapak Fotoğrafı">
					</div>

					<button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
				</form>

			</div>
		</div>
	</div>
</div>
